<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head.ejs") %>
    <style>
      .form-container {
        max-width: 500px;
        width: 100%;
      }
      .input-field {
        transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
      }
      .input-field:focus {
        border-color: #6b21a8;
        box-shadow: 0 0 0 3px rgba(107, 33, 168, 0.2);
      }
      .submit-btn {
        background-color: #6b21a8;
        transition: background-color 0.2s ease-in-out;
      }
      .submit-btn:hover {
        background-color: #5b1a8b;
      }
    </style>
  </head>
  <body class="bg-gray-50 flex flex-col min-h-screen">
    <%- include("../partials/nav.ejs") %>
    <header class="bg-purple-700 w-full py-5 shadow-lg">
      <h1 class="text-3xl font-bold text-white text-center">
        Register Your Home on Airbnb
      </h1>
    </header>
    <main class="flex justify-center mt-8 w-full px-4">
      <form
        action="/host/add-home"
        method="POST"
        class="form-container bg-white shadow-md rounded-lg p-6"
      >
        <% if (error) { %>
        <p class="text-red-500 text-sm mb-4 text-center"><%= error %></p>
        <% } %>
        <input
          type="text"
          placeholder="Enter your Home Name"
          name="homeName"
          required
          class="input-field w-full mb-4 px-3 py-2 border border-gray-300 rounded-md focus:outline-none"
        />
        <input
          type="number"
          placeholder="Price Per Night"
          name="price"
          required
          min="0"
          step="0.01"
          class="input-field w-full mb-4 px-3 py-2 border border-gray-300 rounded-md focus:outline-none"
        />
        <input
          type="text"
          placeholder="Location"
          name="location"
          required
          class="input-field w-full mb-4 px-3 py-2 border border-gray-300 rounded-md focus:outline-none"
        />
        <input
          type="number"
          placeholder="Rating (0-5)"
          name="rating"
          min="0"
          max="5"
          step="0.1"
          class="input-field w-full mb-4 px-3 py-2 border border-gray-300 rounded-md focus:outline-none"
        />
        <input
          type="text"
          placeholder="Photo URL (optional)"
          name="PhotoURL"
          class="input-field w-full mb-4 px-3 py-2 border border-gray-300 rounded-md focus:outline-none"
        />
        <input
          type="submit"
          value="Submit"
          class="submit-btn text-white font-semibold py-2 px-4 rounded-md cursor-pointer w-full"
        />
      </form>
    </main>
  </body>
</html>
